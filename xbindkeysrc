###########################
# xbindkeys configuration #
###########################

# Increase backlight
"xbacklight -inc 10"
   XF86MonBrightnessUp

# Decrease backlight
"xbacklight -dec 10"
   XF86MonBrightnessDown

# Increase volume
"amixer set Master 5%+"
   XF86AudioRaiseVolume

# Decrease volume
"amixer set Master 5%-"
   XF86AudioLowerVolume

# Mute volume
"amixer set Master toggle"
   XF86AudioMute

# Audio play
"playerctl play-pause"
   XF86AudioPlay

# Audio next
"playerctl next"
   XF86AudioNext

# Audio previous
"playerctl previous"
   XF86AudioPrev
